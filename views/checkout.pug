extends layout

block content
    // Search Wrapper Area Start
    include includes/search-wrapper-area
    // Search Wrapper Area End
    // ##### Main Content Wrapper Start #####
    .main-content-wrapper.d-flex.clearfix
        // Mobile Nav (max width 767px)
        .mobile-nav
            // Navbar Brand
            .amado-navbar-brand
                a(href='index.html')
                    img(src='img/core-img/logo.png', alt='')
            // Navbar Toggler
            .amado-navbar-toggler
                span
                span
                span
        // Header Area Start
        include includes/header
        // Header Area End
        .cart-table-area.section-padding-100
            .container-fluid
                .row
                    .col-12.col-lg-8
                        .checkout_details_area.mt-50.clearfix
                            .cart-title
                                h2 Checkout
                            form(action='#', method='post')
                                .row
                                    .col-md-6.mb-3
                                        input#first_name.form-control(type='text', value='', placeholder='First Name', required='')
                                    .col-md-6.mb-3
                                        input#last_name.form-control(type='text', value='', placeholder='Last Name', required='')
                                    .col-12.mb-3
                                        input#company.form-control(type='text', placeholder='Company Name', value='')
                                    .col-12.mb-3
                                        input#email.form-control(type='email', placeholder='Email', value='')
                                    .col-12.mb-3
                                        select#country.w-100
                                            option(value='usa') United States
                                            option(value='uk') United Kingdom
                                            option(value='ger') Germany
                                            option(value='fra') France
                                            option(value='ind') India
                                            option(value='aus') Australia
                                            option(value='bra') Brazil
                                            option(value='cana') Canada
                                    .col-12.mb-3
                                        input#street_address.form-control.mb-3(type='text', placeholder='Address', value='')
                                    .col-12.mb-3
                                        input#city.form-control(type='text', placeholder='Town', value='')
                                    .col-md-6.mb-3
                                        input#zipCode.form-control(type='text', placeholder='Zip Code', value='')
                                    .col-md-6.mb-3
                                        input#phone_number.form-control(type='number', min='0', placeholder='Phone No', value='')
                                    .col-12.mb-3
                                        textarea#comment.form-control.w-100(name='comment', cols='30', rows='10', placeholder='Leave a comment about your order')
                                    .col-12
                                        .custom-control.custom-checkbox.d-block.mb-2
                                            input#customCheck2.custom-control-input(type='checkbox')
                                            label.custom-control-label(for='customCheck2') Create an accout
                                        .custom-control.custom-checkbox.d-block
                                            input#customCheck3.custom-control-input(type='checkbox')
                                            label.custom-control-label(for='customCheck3') Ship to a different address
                    .col-12.col-lg-4
                        .cart-summary
                            h5 Cart Total
                            ul.summary-table
                                li
                                    span subtotal:
                                    span $140.00
                                li
                                    span delivery:
                                    span Free
                                li
                                    span total:
                                    span $140.00
                            .payment-method
                                // Cash on delivery
                                .custom-control.custom-checkbox.mr-sm-2
                                    input#cod.custom-control-input(type='checkbox', checked='')
                                    label.custom-control-label(for='cod') Cash on Delivery
                                // Paypal
                                .custom-control.custom-checkbox.mr-sm-2
                                    input#paypal.custom-control-input(type='checkbox')
                                    label.custom-control-label(for='paypal')
                                        | Paypal
                                        img.ml-15(src='img/core-img/paypal.png', alt='')
                            .cart-btn.mt-100
                                a.btn.amado-btn.w-100(href='#') Checkout
    // ##### Main Content Wrapper End #####
    // ##### Newsletter Area Start #####
    section.newsletter-area.section-padding-100-0
        .container
            .row.align-items-center
                // Newsletter Text
                .col-12.col-lg-6.col-xl-7
                    .newsletter-text.mb-100
                        h2
                            | Subscribe for a
                            span 25% Discount
                        p
                            | Nulla ac convallis lorem, eget euismod nisl. Donec in libero sit amet mi vulputate consectetur. Donec auctor interdum purus, ac finibus massa bibendum nec.
                // Newsletter Form
                .col-12.col-lg-6.col-xl-5
                    .newsletter-form.mb-100
                        form(action='#', method='post')
                            input.nl-email(type='email', name='email', placeholder='Your E-mail')
                            input(type='submit', value='Subscribe')
    // ##### Newsletter Area End #####
