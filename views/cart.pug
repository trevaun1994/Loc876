extends layout

block content
    // Search Wrapper Area Start
    .search-wrapper.section-padding-100
        .search-close
            i.fa.fa-close(aria-hidden='true')
        .container
            .row
                .col-12
                    .search-content
                        form(action='#', method='get')
                            input#search(type='search', name='search', placeholder='Type your keyword...')
                            button(type='submit')
                                img(src='img/core-img/search.png', alt='')
    // Search Wrapper Area End
    // ##### Main Content Wrapper Start #####
    .main-content-wrapper.d-flex.clearfix
        // Mobile Nav (max width 767px)
        .mobile-nav
            // Navbar Brand
            .amado-navbar-brand
                a(href='index.html')
                    img(src='img/core-img/logo.png', alt='')
            // Navbar Toggler
            .amado-navbar-toggler
                span
                span
                span
        // Header Area Start
        header.header-area.clearfix
            // Close Icon
            .nav-close
                i.fa.fa-close(aria-hidden='true')
            // Logo
            .logo
                a(href='index.html')
                    img(src='img/core-img/logo.png', alt='')
            // Amado Nav
            nav.amado-nav
                ul
                    li
                        a(href='index.html') Home
                    li
                        a(href='shop.html') Shop
                    li
                        a(href='product-details.html') Product
                    li.active
                        a(href='cart.html') Cart
                    li
                        a(href='checkout.html') Checkout
            // Button Group
            .amado-btn-group.mt-30.mb-100
                a.btn.amado-btn.mb-15(href='#') %Discount%
                a.btn.amado-btn.active(href='#') New this week
            // Cart Menu
            .cart-fav-search.mb-100
                a.cart-nav(href='cart.html')
                    img(src='img/core-img/cart.png', alt='')
                    |  Cart
                    span (0)
                a.fav-nav(href='#')
                    img(src='img/core-img/favorites.png', alt='')
                    |  Favourite
                a.search-nav(href='#')
                    img(src='img/core-img/search.png', alt='')
                    |  Search
            // Social Button
            .social-info.d-flex.justify-content-between
                a(href='#')
                    i.fa.fa-pinterest(aria-hidden='true')
                a(href='#')
                    i.fa.fa-instagram(aria-hidden='true')
                a(href='#')
                    i.fa.fa-facebook(aria-hidden='true')
                a(href='#')
                    i.fa.fa-twitter(aria-hidden='true')
        // Header Area End
        .cart-table-area.section-padding-100
            .container-fluid
                .row
                    .col-12.col-lg-8
                        .cart-title.mt-50
                            h2 Shopping Cart
                        .cart-table.clearfix
                            table.table.table-responsive
                                thead
                                    tr
                                        th
                                        th Name
                                        th Price
                                        th Quantity
                                tbody
                                    tr
                                        td.cart_product_img
                                            a(href='#')
                                                img(src='img/bg-img/cart1.jpg', alt='Product')
                                        td.cart_product_desc
                                            h5 White Modern Chair
                                        td.price
                                            span $130
                                        td.qty
                                            .qty-btn.d-flex
                                                p Qty
                                                .quantity
                                                    span.qty-minus(onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--;return false;")
                                                        i.fa.fa-minus(aria-hidden='true')
                                                    input#qty.qty-text(type='number', step='1', min='1', max='300', name='quantity', value='1')
                                                    span.qty-plus(onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;")
                                                        i.fa.fa-plus(aria-hidden='true')
                                    tr
                                        td.cart_product_img
                                            a(href='#')
                                                img(src='img/bg-img/cart2.jpg', alt='Product')
                                        td.cart_product_desc
                                            h5 Minimal Plant Pot
                                        td.price
                                            span $10
                                        td.qty
                                            .qty-btn.d-flex
                                                p Qty
                                                .quantity
                                                    span.qty-minus(onclick="var effect = document.getElementById('qty2'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--;return false;")
                                                        i.fa.fa-minus(aria-hidden='true')
                                                    input#qty2.qty-text(type='number', step='1', min='1', max='300', name='quantity', value='1')
                                                    span.qty-plus(onclick="var effect = document.getElementById('qty2'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;")
                                                        i.fa.fa-plus(aria-hidden='true')
                                    tr
                                        td.cart_product_img
                                            a(href='#')
                                                img(src='img/bg-img/cart3.jpg', alt='Product')
                                        td.cart_product_desc
                                            h5 Minimal Plant Pot
                                        td.price
                                            span $10
                                        td.qty
                                            .qty-btn.d-flex
                                                p Qty
                                                .quantity
                                                    span.qty-minus(onclick="var effect = document.getElementById('qty3'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--;return false;")
                                                        i.fa.fa-minus(aria-hidden='true')
                                                    input#qty3.qty-text(type='number', step='1', min='1', max='300', name='quantity', value='1')
                                                    span.qty-plus(onclick="var effect = document.getElementById('qty3'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;")
                                                        i.fa.fa-plus(aria-hidden='true')
                    .col-12.col-lg-4
                        .cart-summary
                            h5 Cart Total
                            ul.summary-table
                                li
                                    span subtotal:
                                    span $140.00
                                li
                                    span delivery:
                                    span Free
                                li
                                    span total:
                                    span $140.00
                            .cart-btn.mt-100
                                a.btn.amado-btn.w-100(href='cart.html') Checkout
    // ##### Main Content Wrapper End #####
    // ##### Newsletter Area Start #####
    section.newsletter-area.section-padding-100-0
        .container
            .row.align-items-center
                // Newsletter Text
                .col-12.col-lg-6.col-xl-7
                    .newsletter-text.mb-100
                        h2
                            | Subscribe for a
                            span 25% Discount
                        p
                            | Nulla ac convallis lorem, eget euismod nisl. Donec in libero sit amet mi vulputate consectetur. Donec auctor interdum purus, ac finibus massa bibendum nec.
                // Newsletter Form
                .col-12.col-lg-6.col-xl-5
                    .newsletter-form.mb-100
                        form(action='#', method='post')
                            input.nl-email(type='email', name='email', placeholder='Your E-mail')
                            input(type='submit', value='Subscribe')
    // ##### Newsletter Area End #####
