extends layout

block content
  // Search Wrapper Area Start
  include includes/search-wrapper-area
  // Search Wrapper Area End

  // ##### Main Content Wrapper Start #####
  .main-content-wrapper.d-flex.clearfix
    // Mobile Nav (max width 767px)
    .mobile-nav
      // Navbar Brand
      .amado-navbar-brand
        a(href='index.html')
          img(src='img/core-img/logo.png', alt='')
      // Navbar Toggler
      .amado-navbar-toggler
        span
        span
        span
    // Header Area Start
    include includes/header
    // Header Area End

    // Product Catagories Area Start
    .products-catagories-area.clearfix
      .amado-pro-catagory.clearfix
        // Single Catagory
        each product in products.length ? products : ['No products found']
          .single-products-catagory.clearfix
            a(href='shop.html')
              img(src = product.imageURL, alt='')
              // Hover Content
              .hover-content
                .line
                p From #{product.symbol}#{product.currency}#{product.cost}
                h4 #{product.name}
    // Product Catagories Area End
  // ##### Main Content Wrapper End #####

  // ##### Newsletter Area Start #####
  section.newsletter-area.section-padding-100-0
    .container
      .row.align-items-center
        // Newsletter Text
        .col-12.col-lg-6.col-xl-7
          .newsletter-text.mb-100
            h2
              | Subscribe for a
              span 25% Discount
            p
              | Put some text here Jhean
        // Newsletter Form
        .col-12.col-lg-6.col-xl-5
          .newsletter-form.mb-100
            form(action='#', method='post')
              input.nl-email(type='email', name='email', placeholder='Your E-mail')
              input(type='submit', value='Subscribe')
  // ##### Newsletter Area End #####