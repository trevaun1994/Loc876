extends layout

block content
    // Search Wrapper Area Start
    include includes/search-wrapper-area
    // Search Wrapper Area End
    // ##### Main Content Wrapper Start #####
    .main-content-wrapper.d-flex.clearfix
        // Mobile Nav (max width 767px)
        .mobile-nav
            // Navbar Brand
            .amado-navbar-brand
                a(href='index.html')
                    img(src='img/core-img/logo.png', alt='')
            // Navbar Toggler
            .amado-navbar-toggler
                span
                span
                span
        // Header Area Start
        include includes/header
        // Header Area End
        // Product Details Area Start
        .single-product-area.section-padding-100.clearfix
            .container-fluid
                .row
                    .col-12
                        nav(aria-label='breadcrumb')
                            ol.breadcrumb.mt-50
                                li.breadcrumb-item
                                    a(href='#') Home
                                li.breadcrumb-item
                                    a(href='#') Furniture
                                li.breadcrumb-item
                                    a(href='#') Chairs
                                li.breadcrumb-item.active(aria-current='page') white modern chair
                .row
                    .col-12.col-lg-7
                        .single_product_thumb
                            #product_details_slider.carousel.slide(data-ride='carousel')
                                ol.carousel-indicators
                                    li.active(data-target='#product_details_slider', data-slide-to='0', style='background-image: url(img/product-img/pro-big-1.jpg);')
                                    li(data-target='#product_details_slider', data-slide-to='1', style='background-image: url(img/product-img/pro-big-2.jpg);')
                                    li(data-target='#product_details_slider', data-slide-to='2', style='background-image: url(img/product-img/pro-big-3.jpg);')
                                    li(data-target='#product_details_slider', data-slide-to='3', style='background-image: url(img/product-img/pro-big-4.jpg);')
                                .carousel-inner
                                    .carousel-item.active
                                        a.gallery_img(href='img/product-img/pro-big-1.jpg')
                                            img.d-block.w-100(src='img/product-img/pro-big-1.jpg', alt='First slide')
                                    .carousel-item
                                        a.gallery_img(href='img/product-img/pro-big-2.jpg')
                                            img.d-block.w-100(src='img/product-img/pro-big-2.jpg', alt='Second slide')
                                    .carousel-item
                                        a.gallery_img(href='img/product-img/pro-big-3.jpg')
                                            img.d-block.w-100(src='img/product-img/pro-big-3.jpg', alt='Third slide')
                                    .carousel-item
                                        a.gallery_img(href='img/product-img/pro-big-4.jpg')
                                            img.d-block.w-100(src='img/product-img/pro-big-4.jpg', alt='Fourth slide')
                    .col-12.col-lg-5
                        .single_product_desc
                            // Product Meta Data
                            .product-meta-data
                                .line
                                p.product-price $180
                                a(href='product-details.html')
                                    h6 White Modern Chair
                                // Ratings & Review
                                .ratings-review.mb-15.d-flex.align-items-center.justify-content-between
                                    .ratings
                                        i.fa.fa-star(aria-hidden='true')
                                        i.fa.fa-star(aria-hidden='true')
                                        i.fa.fa-star(aria-hidden='true')
                                        i.fa.fa-star(aria-hidden='true')
                                        i.fa.fa-star(aria-hidden='true')
                                    .review
                                        a(href='#') Write A Review
                                // Avaiable
                                p.avaibility
                                    i.fa.fa-circle
                                    |  In Stock
                            .short_overview.my-5
                                p
                                    | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid quae eveniet culpa officia quidem mollitia impedit iste asperiores nisi reprehenderit consequatur, autem, nostrum pariatur enim?
                            // Add to Cart Form
                            form.cart.clearfix(method='post')
                                .cart-btn.d-flex.mb-50
                                    p Qty
                                    .quantity
                                        span.qty-minus(onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--;return false;")
                                            i.fa.fa-caret-down(aria-hidden='true')
                                        input#qty.qty-text(type='number', step='1', min='1', max='300', name='quantity', value='1')
                                        span.qty-plus(onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++;return false;")
                                            i.fa.fa-caret-up(aria-hidden='true')
                                button.btn.amado-btn(type='submit', name='addtocart', value='5') Add to cart
        // Product Details Area End
    // ##### Main Content Wrapper End #####
    // ##### Newsletter Area Start #####
    section.newsletter-area.section-padding-100-0
        .container
            .row.align-items-center
                // Newsletter Text
                .col-12.col-lg-6.col-xl-7
                    .newsletter-text.mb-100
                        h2
                            | Subscribe for a
                            span 25% Discount
                        p
                            | Nulla ac convallis lorem, eget euismod nisl. Donec in libero sit amet mi vulputate consectetur. Donec auctor interdum purus, ac finibus massa bibendum nec.
                // Newsletter Form
                .col-12.col-lg-6.col-xl-5
                    .newsletter-form.mb-100
                        form(action='#', method='post')
                            input.nl-email(type='email', name='email', placeholder='Your E-mail')
                            input(type='submit', value='Subscribe')
    // ##### Newsletter Area End #####
